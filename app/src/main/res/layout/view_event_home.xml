<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/event_cardview"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:background="@color/lightGray"
    app:cardCornerRadius="@dimen/card_radius"
app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="@dimen/medium_space">

                <ImageView
                    android:id="@+id/event_home_img_cover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/lightGray"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/event_home_txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/large_space"
                        android:paddingRight="@dimen/large_space"
                        android:text="DOM. MAR. 5, 4:30 P.M"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_material_subheading" />

                    <TextView
                        android:id="@+id/event_home_txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:paddingLeft="@dimen/large_space"
                        android:paddingRight="@dimen/large_space"
                        android:text="Free"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_material_subheading" />
                </LinearLayout>

                <TextView
                    android:id="@+id/event_home_txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/large_space"
                    android:paddingTop="@dimen/medium_space"
                    android:paddingRight="@dimen/large_space"
                    android:text="Best Event Ever Close to Your Zone, Don't Miss It!"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_material_title" />

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/event_home_but_google_maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="View on map" />

        <Button
            android:id="@+id/event_home_but_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="LEARN MORE"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/event_home_but_uber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="Call Uber" />
    </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
